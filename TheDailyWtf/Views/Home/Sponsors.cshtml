@model HomeIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content" id="sponsor-page">
    <h2 class="title">Sponsors</h2>
    <span class="details">
        Please support The Daily WTF by visiting our sponsors!
    </span>
    <div class="banner-triangle"></div>

    <div id="sponsor-listing">

        <div class="sponsor-container">

            <div class="sponsor-logo-container">
                <a target="_blank" href="https://inedo.com/?utm_source=TheDailyWTF&utm_medium=link&utm_campaign=TDWTF15&utm_content=sponsor-page">
                    <img src="/Content/Images/Sponsors/inedo.png" />
                </a>
            </div>
            <div class="sponsor-bio">
                <p>
                    It doesn't matter how elegant your architecture is, how beautifully written your code is, or how many unit
                    tests you have if you can't reliably and repeatedly deploy changes to your applications.
                </p>
                <p>
                    Our products play an important role in this delivery process and help all kinds of code -- good, bad, old,
                    and new -- go safely on to production. And should bugs find their way in your code, we want to make sure
                    you can test and deploy fixes as fast as you can write them.
                </p>

            </div>
        </div>
    </div>

    <hr />
    <div class="sponsor-footer">
        <h5><img src="/Content/Images/sound.svg" />Interesting in sponsoring?</h5>
        <p>
            There are no sponsorship slots available, but one may open up in the future; please <a href="/contact?Tim+Sylvia">contact Tim Sylvia</a> for more information.
        </p>
    </div>

</div>
